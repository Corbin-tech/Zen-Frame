---
import QuickTaskInput from './QuickTaskInput.astro';
---

<script>
import Alpine from 'alpinejs';
</script>

<script type="module">
import '/src/components/taskManager.js';
</script>

<div x-data="taskManager" class="w-full max-w-3xl mx-auto bg-white dark:bg-slate-800 rounded-xl shadow-sm p-6">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">Task Manager</h1>
    <QuickTaskInput class="mb-8" />
    
    <div x-show="$store.todos.items.length > 0" class="space-y-2">
        <template x-for="task in $store.todos.items" x-bind:key="task.id">
            <div 
                data-task-item
                x-bind:data-task-id="task.id"
                class="task-item relative p-3 bg-white dark:bg-slate-700 rounded-lg group transition-all duration-200"
                x-bind:class="{
                    'mb-4 border-l-4 border-blue-500 bg-blue-50 dark:bg-slate-600/50 pl-4': task.isCluster,
                    'hover:bg-gray-50 dark:hover:bg-slate-600': !task.isCluster
                }"
            >
                <div 
                    data-drag-handle
                    class="absolute left-3 top-3 p-1.5 cursor-move opacity-0 group-hover:opacity-100 text-gray-400 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
                    </svg>
                </div>

                <div class="flex items-center gap-3 pl-8">
                    <template x-if="!task.isCluster">
                        <input 
                            type="checkbox"
                            x-bind:id="'todo-' + task.id"
                            x-model="task.completed"
                            class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 dark:bg-slate-600 dark:border-slate-500"
                        />
                    </template>
                    <template x-if="task.isCluster">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </template>
                        <span
                            x-bind:class="{
                                'line-through text-gray-400 dark:text-gray-500': task.completed && !task.isCluster,
                                'text-gray-800 dark:text-white font-medium': task.isCluster,
                                'text-gray-700 dark:text-gray-300': !task.isCluster && !task.completed
                            }"
                            x-text="task.todo"
                        ></span>
                    </div>

                    <button 
                        @click.stop="$store.todos.deleteTodo(task.id)"
                        class="absolute right-3 top-3 p-1.5 opacity-0 group-hover:opacity-100 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-full transition-all"
                        x-bind:aria-label="'Delete ' + (task.isCluster ? 'cluster' : 'task') + ': ' + task.todo"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
        </template>
    </div>
</div>

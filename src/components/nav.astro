---
/*
 * Navigation Component
 * - Provides site-wide navigation
 * - Supports responsive design
 * - Includes dark mode toggle
 */
import DarkModeToggle from "./darkModeToggle.astro";
---

<nav class="bg-stone-100 border-gray-200 dark:bg-slate-800">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <button 
      @click="$dispatch('change-tab', { tab: 'todo' })"
      class="flex items-center"
    >
      <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Zen Frame</span>
    </button>
   
    <button
      data-collapse-toggle="targetEl"
      id="triggerEl"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-700 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"
        ></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="targetEl">
      <ul class="font-medium items-center flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-stone-100 dark:bg-slate-800 md:dark:bg-slate-800 dark:border-gray-700">
        <li>
          <button 
            @click="$dispatch('change-tab', { tab: 'todo' })"
            class="block py-2 pl-3 pr-4 rounded md:p-0 text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400"
          >
            Home
          </button>
        </li>
        <li>
          <button 
            @click="$dispatch('change-tab', { tab: 'planner' })"
            class="block py-2 pl-3 pr-4 rounded md:p-0 text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400"
          >
            Planner
          </button>
        </li>
        <li>
          <button 
            @click="$dispatch('change-tab', { tab: 'zenmode' })"
            class="block py-2 pl-3 pr-4 rounded md:p-0 text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400"
          >
            Zen Mode
          </button>
        </li>
        <li>
          <DarkModeToggle />
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Handle mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const triggerEl = document.getElementById('triggerEl');
    const targetEl = document.getElementById('targetEl');

    if (triggerEl && targetEl) {
      triggerEl.addEventListener('click', () => {
        targetEl.classList.toggle('hidden');
      });
    }
  });
</script>
---
import Nav from '../components/nav.astro';
import Footer from '../components/footer.astro';
import DarkModeToggle from '../components/darkModeToggle.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<script is:inline>
			(function() {
				const savedTheme = localStorage.getItem('theme') || 'light';
				const htmlEl = document.documentElement;
				htmlEl.classList.toggle('dark', savedTheme === 'dark');
				htmlEl.setAttribute('data-theme-loaded', '');
			})();
		</script>
		
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Initialize theme -->
		<script>
			import { initTheme } from '../scripts/initTheme';
			initTheme();
		</script>
		
		<!-- Initialize stores -->
		<script>
			import { initThemeStore } from '../stores/themeStore';
			import { initStores } from '../stores/todoStore';

			document.addEventListener('alpine:init', () => {
				initThemeStore();
				initStores();
			});
		</script>
		
		<!-- Additional dependencies -->
		<script defer src="https://cdn.jsdelivr.net/npm/js-confetti@0.12.0/dist/js-confetti.browser.min.js"></script>
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
		
		<style is:global>
			/* Prevent transition flash */
			html:not([data-theme-loaded]) {
				transition: none !important;
				animation: none !important;
			}
		</style>

		<script
		type="module" src="/src/components/taskManager.js">
	</script>
	</head>
	<body class="min-h-screen bg-stone-100 dark:bg-slate-900 transition-theme overflow-hidden">
		<div class="flex flex-col min-h-screen">
			
			<!-- Content Wrapper -->
			<div class="flex-1 flex flex-col pl-4 pr-8 py-6">
				<main class="p-6 flex-1">
					<div class="flex justify-end mb-4">
						<DarkModeToggle />
					</div>
					<slot />
				</main>
			</div>
			<Footer class="border-t p-4" />
		</div>
	</body>
</html>

<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>